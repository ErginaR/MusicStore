@model MusicStore.Domain.Entities.Album
@{
        ViewBag.Title = "Details";
 }
<div class="col-md-4 well well-sm text-success" style="margin-right:50px;">
    <table class=" table table-hover">
        <tr>
            <td colspan="2"><h1 class="text-success text-center"><span class="glyphicon glyphicon-music"></span></h1></td>
        </tr>
        <tr>
            <td>Title:</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>Artist:</td>
            <td>@Model.Artist</td>
        </tr>
        <tr>
            <td>Genre:</td>
            <td>@Model.Genre</td>
        </tr>
        <tr>
            <td>Price:</td>
            <td>
                @Model.Price.ToString("c")
                @using (Html.BeginForm("Add", "ShoppingCart"))
                {
                  @Html.Hidden("returnUrl",(string)ViewBag.ReturnUrl)
                  @Html.HiddenFor(p=>p.AlbumID);
                  <input type="submit" value="Add To Cart" class = "btn btn-success"/>
                }
            </td>
        </tr>
    </table>
</div>