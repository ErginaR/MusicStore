<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .well {
            background: rgb(237, 199, 243);
        }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body class="bg-info">
    <div>
        <div class="navbar navbar-inverse bg-primary " >
            <div class="pull-right">
                @Html.ActionLink("Home", "Index", "Home", new { genre = (string)null }, new { @class = "navbar-brand" })
                @Html.Action("CartInfo","ShoppingCart")
                @Html.ActionLink("Admin", "List", "Admin", null, new { @class = "navbar-brand" })
                @{
                    if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Sign Out", "SignOut", "Account", null, new { @class = "navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "navbar-brand" })
                    }
                }
             </div>
        </div>
        <div class="container">
        <div class="row">
            <div class="col-md-2">
                <h1 class="text-danger"><span class="glyphicon glyphicon-music"></span></h1>
            </div>
            <div class="col-md-10">
                <h1 class="text-danger"><b>Music Store</b></h1>
            </div>
        </div>
        <hr/> 
        <div class="row">
            <div class="col-md-2">
                @Html.Action("Menu","Navigation")
            </div>
           
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
         </div>
    </div>
</body>
</html>