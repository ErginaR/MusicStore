@model MusicStore.Domain.Entities.Album

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        <h2>Edit</h2>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Admin"))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(a => a.AlbumID)
            <div class="form-inline form-group row">
                <label class="col-md-1">Title</label>
                @Html.TextBoxFor(a=>a.Title, new { @class = "form-control col-md-6" })
            </div>
            foreach (var el in ViewData.ModelMetadata.Properties)
            {
                if (@el.PropertyName != "AlbumID"&& @el.PropertyName != "Title")
                {
                    <div class="form-inline form-group row">
                        <label class="col-md-1">@el.PropertyName</label>
                        @Html.TextBox(el.PropertyName, null, new { @class = "form-control col-md-6" })
                    </div>
                }
            }
            <input type="submit" value="Submit" class="btn btn-success" />
        }
    </div>
 </div>
